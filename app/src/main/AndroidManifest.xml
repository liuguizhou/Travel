<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.travel.liuyun">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- 获取网络状态 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 网络通信-->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!-- 获取设备信息 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!-- 获取MAC地址-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 读写sdcard，storage等等 -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <!-- 允许程序录制音频 -->

    <application
        android:name=".TravelApplication"
        android:allowBackup="true"
        android:icon="@mipmap/jiawang_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
            android:name=".activity.MainActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.ToLiveActivity"></activity>
        <activity
            android:name=".activity.DialogActivity"
            android:theme="@style/activity_dialog"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".activity.ToPlayActivity"></activity>
        <activity android:name=".activity.ImpressionActivity"></activity>
        <activity android:name=".activity.TripNewsActivity"></activity>
        <activity android:name=".activity.ToEntertainActivity"></activity>
        <activity android:name=".activity.GreenDaoActivity"></activity>
        <meta-data
            android:name="PGYER_APPID"
            android:value="fd545555ea90f3ffd62d1d64978b5f47"></meta-data><!-- ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information. -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>
